{
  "name": "game_server",
  "version": "0.6.3",
  "description": "Сервер для обмена информацией между клиентами.",
  "main": "./src",
  "scripts": {
    "serve": "nodemon --use-strict ./src",
    "update": "rm -rf */** && git clone https://github.com/slavikse/game_server.git . && npm i",
    "start": "pm2 start ./config/pm2.json",
    "restart": "pm2 restart game_server",
    "stop": "pm2 stop game_server"
  },
  "engines": {
    "node": "10.14.1",
    "npm": "6.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/slavikse/game_server.git"
  },
  "author": "slavikse <gslavikse@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.6.2",
    "koa-static": "^5.0.0",
    "nodemon": "^1.18.8",
    "pm2": "^3.2.3",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/socket.io": "^2.1.2",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
  }
}
