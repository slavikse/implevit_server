{
  "name": "game_server",
  "version": "0.4.1",
  "description": "Сервер для обмена информацией между клиентами в 60fps.",
  "main": "./src",
  "scripts": {
    "serve": "nodemon --use-strict ./src",
    " ------------------------------- ": " ------------------------------- ",
    "Команды к выполнению на сервере": "Подключение к серверу, обновление и запуск приложения.",
    "Подключение к серверу": "ssh root@5.63.159.2",
    "Выполнить в ssh консоли": "cd game_server && npm run replace && npm restart",
    "---------------------------------": "---------------------------------",
    "replace": "npm run clean && git pull && npm i",
    "clean": "rm -rf ./node_modules ./package-lock.json",
    "start": "pm2 start pm2.json",
    "restart": "pm2 restart game_server",
    "stop": "pm2 stop game_server",
    "kill": "taskkill /F /IM node.exe"
  },
  "engines": {
    "node": "10.14.1",
    "npm": "6.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/slavikse/game_server.git"
  },
  "author": "slavikse <gslavikse@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "koa": "^2.6.2",
    "koa-compress": "^3.0.0",
    "koa-static": "^5.0.0",
    "nodemon": "^1.18.7",
    "pm2": "^3.2.2",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/socket.io": "^2.1.2",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
  }
}
